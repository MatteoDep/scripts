#!/bin/sh

dotfiles_dir="${DOTFILES_DIR:-"$HOME/.dotfiles"}"

for i in "$@"; do
    [ -n "$i" ] && {
        full=$(realpath "$i")
        relative="${full#"$HOME/"}"
        mkdir -p "$(dirname "$dotfiles_dir/$relative")"
        mv "$full" "$dotfiles_dir/$relative"
        ln -s "$dotfiles_dir/$relative" "$full"
    }
done
