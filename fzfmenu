#!/bin/sh

args="--reverse --no-info"

usage() {
echo "Usage: fzfmenu [-h] [-p prompt]"
}

while getopts "m:p:h" option
do
	case "${option}" in
		p) args="$args --prompt=\'$OPTARG\'";;
		h) usage; exit 0;;
		*) args="$args -$option $OPTARG";;
	esac
done
shift $((OPTIND-1))
args="$args $*"

$TERMINAL -t fzfmenu -e sh -c "ueberzug-wrap fzf $args </proc/$$/fd/0 >/proc/$$/fd/1"
